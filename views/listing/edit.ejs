<% layout("/Layout/boilerplate") %>
    <div class="row mt-3"></div>
    <div class="col-8 offset-2">
        <h2> Listing Details</h2>
        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

            <div class="mb-3 mt-4">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" value="<%= listing.title %>" placeholder="Edit the Title"
                    class="form-control" required>
                <div class="valid-feedback">Title Looks Good!</div>
                <div class="invalid-feedback">Please Enter Title!</div>
            </div>   

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea rows="6" cols="40" class="form-control" name="listing[description]" value="<%= listing.description %>" required></textarea>
                <div class="valid-feedback">Description looks good</div>
                <div class="invalid-feedback">please write Description in 200 words!</div>
            </div>

            <div class="mb-3 ">
                <b>Original Listing Image</b>
                <div class="mt-3 mb-5">
                    <img class="Preview-editImg" src="<%= OriginalImageUrl %>">
                </div>
                <label for="image" class="form-label">Upload new Image</label>
                <input type="file" name="listing[image]" class="form-control">
            </div>

            <div class="row ">
                <div class="mb-3 col-10">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control"
                        required>
                    <div class="invalid-feedback">please Enter the valid Price</div>
                </div>

                <div class="mb-3 col-4">
                    <label for="location class=" form-label">Location</label>
                    <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control"
                        required>
                    <div class="invalid-feedback">please enter the valid location</div>
                </div>
            </div>

            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
                <div class="invalid-feedback">please enter the country name</div>
            </div>

            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                    <label class="form-check-label" for="invalidCheck">
                        Agree to terms and conditions
                    </label>
                    <div class="invalid-feedback mb-5">
                        You must agree before submitting.
                    </div>
                    <div class="text-center">
                        <button style="text-decoration: none; color:black; font-weight: 700;" type="submit"
                        class="btn btn-outline-secondary edit-btn mt-8">Submit</button>
                    </div>
                    
        </form>
    </div>
    </div>